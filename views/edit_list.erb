<section id="todos">
  <header>
    <h2>Editing '<%= @list[:name] %>'</h2>
    <ul>
      <form action="/lists/<%= params[:id] %>/destroy" method="post">
        <button type="submit" class="delete">Delete item</button>
      </form>
    </ul>
  </header>
</section>

<form action="/lists/<%= params[:id] %>" method="post">
  <dl>
    <dt>
      <label for="list_name">Enter a new name for your the list:</label>
    </dt>
    <dd>
      <input name="list_name" placeholder="list Name" type="text" value="<%= params[:list_name] || @list[:name] %>">
    </dd>
  <dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists/<%= params[:id] %>">Cancel</a>
  </fieldset>
</form>
